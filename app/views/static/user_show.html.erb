<div class="card text-center" style="width: 100%;">
  <div class="card-body">
    <h5 class="card-title"><%= @user.first_name %> <%= @user.last_name %></h5>
    <p class="card-text"><%= @user.description %></p>
  </div>
  <ul class="list-group list-group-flush">
    <li class="list-group-item">Né en <%= Time.now.year - @user.age %></li>
    <li class="list-group-item"><%= @user.email %></li>
    <li class="list-group-item">Habite à <%= @user.city.name %></li>
    <li class="list-group-item">Il a publié <%= @user.gossips.count %> gossip(s)</li>
  </ul>
  <div class="card-body">
    <%= link_to "GoBackHome !!!", accueil_path, class: "btn btn-secondary" %>
  </div>
</div>
