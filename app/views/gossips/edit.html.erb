<h1>Editer un potin</h1>

<% if @gossip.errors.any? %>
    <ul>
        <% @gossip.errors.full_messages.each do |message| %>
            <li class="alert alert-danger" role="alert"><%= message %></li>
        <% end %>
    </ul>
<% end %>

<%= form_for @gossip do |f| %>
    <div class="form-group">
        <label>Titre du potin</label>
        <%= f.text_field :title, class: 'form-control' %>
    </div>

    <div class="form-group">
        <label>Le contenu du potin</label>
        <%= f.text_area :content, class: 'form-control' %>
    </div>

    <div class="form-group">
        <button type="submit">Modifier le potin</button>
    </div>
<% end %>