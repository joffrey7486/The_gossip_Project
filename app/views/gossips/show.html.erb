<h1>Gossip</h1>

<% if @gossip_is_new %>  
  <p class="alert alert-success" role="alert">Votre potin a bien été crée </p>        
<% end %>

<div class="card text-center">
  <div class="card-header">
    <%= @gossip.user.first_name %> <%= @gossip.user.last_name %> 
  </div>
  <div class="card-body">
    <h5 class="card-title"><%= @gossip.title %></h5>
    <p class="card-text"><%= @gossip.content %></p>
    
  </div>
  <div class="card-footer text-muted">
    <a href="/users/<%= @gossip.user.id %>" class="btn btn-primary">Plus d'info sur l'auteur</a>
    <%= link_to "GoBackHome !!!", gossips_path, class: "btn btn-info" %>
  </div>
</div>